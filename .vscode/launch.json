{
  "version": "1.0.0",
  "configurations": [
      {
          "name": "Debug C Program",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/main",  // Corrected path to the compiled program
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": true,
          "MIMode": "gdb",
          "miDebuggerPath": "C:/TDM-GCC-64/bin/gdb.exe",  // Update to your GDB path (change if necessary)
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}
