{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:/TDM-GCC-64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "${workspaceFolder}/src/main.c",
                "${workspaceFolder}/src/startWindow.c",
                "${workspaceFolder}/src/tools.c",
                "${workspaceFolder}/src/player.c",
                "-o",
                "${workspaceFolder}/bin/main",
                "-I${workspaceFolder}/lib/include",
                "-L${workspaceFolder}/lib/lib",
                "-I${workspaceFolder}/bin",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf"
            ],
            "options": {
                 "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}